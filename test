#include <iostream>
#include <string>

using namespace std;
void foo(int array[][5], int q, int p, int max2)
{
    int temp;
    temp = array[q][max2];
    array[q][max2] = array[q][p];
    array[q][p] = temp;

}
int check(int array[][5], int q, int p)
{
    if ( array[q][p] > 0 && array[q][p-1] < 0 )
        return 1;
    if ( array[q][p] < 0 && array[q][p-1] > 0 )
        return 2;
    else
        return 3;
}
int main ()
{
    int A[4][5] = {{11,12,-13,14,-15},{-10,11,-12,13,5},{-9,10,-11,12,-1},{0,0,-12,-4,2}};
    int max = 4;
    for (int i = 0; i < 4; i++)
    {
        for (int k = 0; k < )
        for (int j = 1; j <= max; j++)
        {
            int f = check(A ,i, j);
            if (f=1)
                foo(A, i, j-1, max);
            if (f=2)
                foo(A, i, j, max);
        }
        max = 4;
    }
    cout << "Answer is : ";
    cout << endl;
    for (int i = 0; i < 4; i++)
    {
        for (int j = 0; j < 5; j++)
        {
            cout << A[i][j] << " ";
        }
        cout << endl;
    }
    return 0;
}
